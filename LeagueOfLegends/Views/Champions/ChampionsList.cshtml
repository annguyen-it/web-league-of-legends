@using LeagueOfLegends.Models
@model List<Champion>

<div class="champion-wrapper ps-4">
  <div class="row row-cols-3 row-cols-sm-4 row-cols-md-5 row-col-lg-5 g-3">
    @foreach (var champion in Model)
    {
      <div class="col position-relative">
        <div class="champion-card">
          <img class="w-100" src="http://ddragon.leagueoflegends.com/cdn/img/champion/loading/@(champion.id)_0.jpg" alt="@champion.name" />
          <div class="name-tag position-absolute bottom-0 w-100">
            <p>@champion.name</p>
          </div>
        </div>
      </div>
    }
  </div>
</div>
