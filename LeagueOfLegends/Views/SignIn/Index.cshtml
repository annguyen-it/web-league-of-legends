@{
  Layout = null;
}

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>Sign In</title>
  <link href="@Url.Content("~/images/favicon/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  @Styles.Render("~/Content/css")
  <link href="@Url.Content("~/Content/Views/SignIn/Index.css")" rel="stylesheet" />
</head>
<body>
  <div class="wrapper d-flex flex-column font-mark-pro">
    <div class="logo"></div>
    <div class="main-wrapper d-flex justify-content-center align-items-center flex-grow-1">
      <main class="d-flex justify-content-center">
        <div class="box d-flex flex-column align-items-center bg-white">
          <h2 class="text-center mb-5">Sign In</h2>
          <div class="login">
            <input class="w-100" type="text" />
            <input class="w-100" type="password" />
            <div class="other-way d-flex">
              <button class="facebook w-100 rounded-3"></button>
              <button class="google w-100 rounded-3"></button>
              <button class="apple w-100 rounded-3"></button>
            </div>
            <div class="stay-sign-in d-flex flex-row-reverse justify-content-end align-items-center my-3">
              <input class="d-none" type="checkbox" id="stay-sign-in-cb" />
              <label for="stay-sign-in-cb">Stay signed in</label>
              <div class="checkbox stay-sign-in-cb" role="button"></div>
            </div>
          </div>
          <button class="btn-submit"></button>
          <div class="links my-4 d-flex flex-column align-items-center text-uppercase fw-bold">
            <a class="d-block text-decoration-none" href="https://recovery.riotgames.com/en?region=BR1">Can't sign in?</a>
            <a class="d-block text-decoration-none" href="https://signup.br.leagueoflegends.com/en">Create account</a>
          </div>
        </div>
      </main>
    </div>
    <div class="term"></div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="@Url.Content("~/Scripts/Site/SignIn/SignIn.js")"></script>
</body>
</html>
