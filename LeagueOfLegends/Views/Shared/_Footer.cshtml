@using LeagueOfLegends.Models.Components

<footer>
  <div class="presenter position-relative">
    <div class="presenter-wrapper">
      <video class="presenter__background w-100" preload="metadata" autoplay loop muted>
        <source src="https://laptrinhkhongvui.com/resources/video/home-footer.mp4" type=video/mp4 />
      </video>
    </div>
    <div class="presenter__play position-absolute start-50 top-50 translate-middle">
      <button class="btn-play-for-free border-0 font-spiegel text-uppercase fw-bold">
        Play for free
        @Html.Partial("~/Views/Components/CanvasRect.cshtml", new CanvasRect(20, new Vertex().TopLeft().BottomRight())
         .Animate("footer_play-btn")
         .Color("#DFDDE9")
         .Position(new Position(-5, -4)))
      </button>
    </div>
  </div>
  <div class="section-0 d-flex justify-content-between align-items-center">
    <div class="text-uppercase font-beaufort fw-bolder">Take league with you</div>
    <div class="flex-shrink-1 flex-grow-1 text-center">Download the League app to stay connected to friends and the latest game and esports news.</div>
    <div class="d-flex justify-content-end align-items-center">
      <a class="me-1" href="https://apps.apple.com/us/app/league-of-legends-friends/id1077150310">
        <img class="w-100" alt="Download on the App Store" src="https://www.leagueoflegends.com/static/Download_on_the_App_Store_Badge_US-UK_RGB_blk_092917.2928664f.svg">
      </a>
      <a href="https://play.google.com/store/apps/details?id=com.riotgames.mobile.leagueconnect&amp;hl=en">
        <img class="w-100" alt="Get it on Google Play" src="https://www.leagueoflegends.com/static/en_get.b89beec4.svg">
      </a>
    </div>
  </div>
  <div class="section-1">
    <ul class="m-0 d-flex flex-wrap justify-content-center">
      <li>
        <a class="d-block px-3 py-2 fw-bolder text-uppercase text-decoration-none" href="#">About League of Legends</a>
      </li>
      <li>
        <a class="d-block px-3 py-2 fw-bolder text-uppercase text-decoration-none" href="#">Help us improve</a>
      </li>
      <li>
        <a class="d-block px-3 py-2 fw-bolder text-uppercase text-decoration-none" href="#">Server status</a>
      </li>
      <li>
        <a class="d-block px-3 py-2 fw-bolder text-uppercase text-decoration-none" href="#">Support</a>
      </li>
      <li>
        <a class="d-block px-3 py-2 fw-bolder text-uppercase text-decoration-none" href="#">Esports pro site</a>
      </li>
      <li>
        <a class="d-block px-3 py-2 fw-bolder text-uppercase text-decoration-none" href="#">Download Riot mobile companion app</a>
      </li>
    </ul>
  </div>
  <div class="section-2"></div>
</footer>
