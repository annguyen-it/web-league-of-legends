@using LeagueOfLegends.Models.Components

<footer>
  <div class="presenter position-relative">
    <div class="presenter-wrapper">
      <video class="presenter__background w-100" preload="metadata" autoplay loop muted>
        <source src="https://laptrinhkhongvui.com/resources/video/home-footer.mp4" type=video/mp4 />
      </video>
    </div>
    <div class="presenter__play position-absolute start-50 top-50 translate-middle">
      <button class="btn-play-for-free border-0 font-spiegel text-uppercase fw-bold">
        Play for free
        @Html.Partial("~/Views/Components/CanvasRect.cshtml", new CanvasRect(20, new Vertex().TopLeft().BottomRight())
         .Animate("footer_play-btn")
         .Color("#DFDDE9")
         .Position(new Position(-5, -4)))
      </button>
    </div>
  </div>
</footer>
