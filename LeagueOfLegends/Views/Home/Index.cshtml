@using LeagueOfLegends.Models.Components

@{
  ViewBag.Title = "Home Page";
}

@section AddToHeader {
  <link href="@Url.Content("~/Content/Views/Home/Index.css")" rel="stylesheet" />
}

<main>
  <section class="section-0">
    <div class="section-0__wrapper position-relative">
      <div class="section-0__background-wrapper position-absolute top-0 bottom-0 start-0 end-0">
        <video class="section-0__background w-100" preload="metadata" autoplay loop muted>
          <source src="https://laptrinhkhongvui.com/resources/video/home-1-blur.mp4" type="video/mp4" />
          <source src="https://laptrinhkhongvui.com/resources/video/home-1-blur.webm" type="video/webm" />
        </video>
      </div>
      <div class="section-0__foreground position-relative">
        <div class="section-0__foreground__presenter-wrapper position-relative h-100">
          <video class="section-0__foreground__presenter-background w-100 h-100" preload="metadata" autoplay loop muted>
            <source src="https://laptrinhkhongvui.com/resources/video/home-1.mp4" type="video/mp4" />
            <source src="https://laptrinhkhongvui.com/resources/video/home-1.webm" type="video/webm" />
          </video>
          <div class="section-0__foreground__presenter-inner position-absolute start-50 top-50 translate-middle">
            <div class="section-0__foreground__presenter-logo">
              <img src="@Url.Content("~/images/logo/logo-full.png")" class="w-100 h-100" />
            </div>
            <div class="section-0__foreground__presenter-play d-flex justify-content-center">
              <button class="btn-play-for-free border-0 font-spiegel text-uppercase fw-bold">
                Play for free
                @Html.Partial("~/Views/Components/CanvasRect.cshtml", new CanvasRect(20, new Vertex().TopLeft().BottomRight())
                 .Animate("section-0_play-btn")
                 .Color("#DFDDE9")
                 .Position(new Position(-5, -4)))
              </button>
            </div>
          </div>
        </div>
        @Html.Partial("~/Views/Components/CanvasRect.cshtml", new CanvasRect(32, new Vertex().TopRight())
          .Resizable()
          .Position(new Position(10, -12)))
      </div>
    </div>
  </section>
  <section class="section-1">
    <div class="section-1__wrapper position-relative d-flex">
      <div class="section-1__title">
        <div class="section-1__title-wrapper d-flex align-items-center text-uppercase">
          Featured news
          <span class="ms-2"></span>
        </div>
      </div>
      <div class="section-1__content d-flex flex-column">
        <div class="section-1__content-wrapper">
          @Html.Partial("News")
        </div>
        <div class="section-1__content__view-all d-flex justify-content-end text-uppercase">
          <a class="section-1__content__view-all__link text-black text-decoration-none" href="https://www.leagueoflegends.com/en-gb/news/">
            View all
            <i class="fa-solid fa-arrow-right"></i>
          </a>
        </div>
      </div>
    </div>
  </section>
  <section class="section-2">
    <div class="section-2__wrapper position-relative">
      <a href="https://playruneterra.com/en-us/">
        <div class="section-2__background w-100">
          <img class="w-100" src="@Url.Content("~/images/assets/legends-of-runeterra.jpg")" alt="Alternate Text" />
        </div>
        @Html.Partial("~/Views/Components/CanvasRect.cshtml", new CanvasRect(35, new Vertex().TopRight(), 3)
         .Animate("section-0_play-btn")
         .Color("#D5D5D5"))
      </a>
    </div>
  </section>
</main>
